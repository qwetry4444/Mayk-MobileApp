        </Tab>

        <Tab Title="Расписание"
             Icon="calendar.svg">
            <ShellContent ContentTemplate="{DataTemplate view:EventsSchedulePage}"
                        Route="EventsSchedulePageTabBar"/>
        </Tab>

        <Tab Title="Заметки"
             Icon="note2.png">
            <ShellContent ContentTemplate="{DataTemplate view:Note.NotesListPage}"
                        Route="Note.NotesListPageTabBar"/>
        </Tab>
    </TabBar>

