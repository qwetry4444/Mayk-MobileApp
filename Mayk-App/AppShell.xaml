<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Mayk_App.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:view="clr-namespace:Mayk_App.View.App"
    Shell.FlyoutBehavior="Flyout">
    <ShellContent
        Title="Start"
        ContentTemplate="{DataTemplate view:StartPage}"
        Route="StartPage"
        Shell.FlyoutBehavior="Disabled"
        Shell.FlyoutItemIsVisible="False" />

    <!--<FlyoutItem>
        <ShellContent ContentTemplate="{DataTemplate view:StartPage}" Route="StartPage"/>
    </FlyoutItem >-->

    <TabBar Route="Main"
            FlyoutDisplayOptions="AsMultipleItems">
        <ShellContent Title="Главная"
                      Icon="home.png"
                      ContentTemplate="{DataTemplate view:MainPage}"
                      Route="MainPage"/>
        <ShellContent Title="Расписание"
                      Icon="calendar.svg"
                      ContentTemplate="{DataTemplate view:EventsSchedulePage}"
                      Route="EventsSchedulePage"/>
        <ShellContent Title="Заметки"
                      Icon="docs.svg"
                      ContentTemplate="{DataTemplate view:Note.NotesListPage}"
                      Route="Note.NotesListPage"/>
    </TabBar>
</Shell>
