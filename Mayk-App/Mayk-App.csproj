	  </Compile>
	</ItemGroup>

	<ItemGroup>
	  <MauiXaml Update="View\Admin\AddEventPage.xaml">
	    <Generator>MSBuild:Compile</Generator>
	  </MauiXaml>
	  <MauiXaml Update="View\Admin\AddPage.xaml">
	    <Generator>MSBuild:Compile</Generator>
	  </MauiXaml>
	  <MauiXaml Update="View\Admin\AddRepetitionPage.xaml">
