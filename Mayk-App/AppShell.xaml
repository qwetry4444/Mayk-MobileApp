<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Mayk_App.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:view="clr-namespace:Mayk_App.View.App">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate view:StartPage}"
        Route="StartPage" />

    <TabBar>
        <ShellContent Title="Расписание"
                      Icon="calendar.png"
                      ContentTemplate="{DataTemplate view:EventsSchedulePage}" />
        <ShellContent Title="Документы"
                      Icon="docs.svg"
                      ContentTemplate="{DataTemplate view:DocumentsPage}" />
        <ShellContent Title="Заметки"
                      Icon="note.png"
                      ContentTemplate="{DataTemplate view:NotesListPage}" />
    </TabBar>
</Shell>
