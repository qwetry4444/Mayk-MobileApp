<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:Mayk_App.ViewModel.Admin.AddUserToRepetitionViewModel"
             xmlns:model="clr-namespace:Mayk_App.Model"
             x:Class="Mayk_App.View.Admin.AddUserToRepetition.UsersListPage"
             x:DataType="vm:UsersListViewModel"
             Title="UsersListPage">
    <VerticalStackLayout>
        <Label 
            Text="{Binding RepetitionId, 
                           StringFormat='Добавление участников на репетицию c id {0}'}"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />


        <Label Text="{Binding RepetitionId}"/>
        <!--<Label Text="{Binding Source={x:Reference slider},
                      Path=Value,
                      StringFormat='The slider value is {0:F2}'}" />-->
        
        
        <CollectionView ItemsSource="{Binding Users}">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="model:User">
                    <Frame Padding="30">
                        <Frame.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type vm:UsersListViewModel}}, Path=AddUserToRepetitionCommand}"
                                                          CommandParameter="{Binding .}"/>
                        </Frame.GestureRecognizers>
                        <Grid ColumnDefinitions="2*, 5*, 5*">
                            <Label Text="{Binding UserId}"
                                           Grid.Column="0"/>
                            <Label Text="{Binding FirstName}"
                                           Grid.Column="1"/>
                            <Label Text="{Binding LastName}"
                                           Grid.Column="2"/>
                        </Grid>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </VerticalStackLayout>
</ContentPage>