<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Mayk_App.StartPage"
             Title="StartPage"
             xmlns:vm="clr-namespace:Mayk_App.ViewModel"
             x:DataType="vm:StartViewModel">
    <Grid ColumnDefinitions=".1*, .8*, .1*"
          RowDefinitions="100"
          Padding="20">
        <Frame Grid.Column="1"
               Grid.Row="0">
            <Frame.GestureRecognizers>
                <TapGestureRecognizer Command="{Binding RedirectToCommandCommand}"/>
            </Frame.GestureRecognizers>
            <Label Text="Войти"/>
        </Frame>
    </Grid>
    
</ContentPage>